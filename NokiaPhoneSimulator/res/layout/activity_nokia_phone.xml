<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/container"
    android:keepScreenOn="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <RelativeLayout
        android:id="@+id/contents"
        android:layout_width="281px"
        android:layout_height="539px"
        android:layout_gravity="center"
        android:background="@drawable/nokia_phone_light">              
        
        <RelativeLayout
            android:id="@+id/display"
		        android:layout_width="216px"
		        android:layout_height="150px"
		        android:layout_marginLeft="32px"
            android:layout_marginTop="25px">
            
            <ImageView 
		            android:id="@+id/signal_indicator"
		            android:src="@drawable/signal_max"
		            android:layout_width="11px"
		            android:layout_height="115px" 
		            android:scaleType="fitCenter" />
            
            <ImageView 
		            android:id="@+id/battery_indicator"            
		            android:src="@drawable/battery_charging_full"
		            android:layout_width="11px"
		            android:layout_height="115px" 
		            android:layout_alignParentRight="true"
		            android:scaleType="fitCenter" />
        
            <TextView
                android:id="@+id/clock_view"
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10px"
                android:layout_toLeftOf="@+id/battery_indicator"
                android:textColor="#2C2328" />
            
            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:singleLine="false"
                android:textColor="#2C2328"
                android:textSize="30dip"
                android:visibility="gone" />
            
            <TextView
                android:id="@+id/action"
                android:layout_width="fill_parent"
                android:layout_height="30px"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:singleLine="false"
                android:textColor="#2C2328" />

	          <TextView
	              android:id="@+id/input"
	              android:layout_width="fill_parent"
                android:layout_height="30px"
                android:gravity="right"
                android:layout_above="@+id/action"
	              android:textColor="#2C2328" />	          
	          
            <TextView
                android:id="@+id/options_menu_title_one"                
                android:layout_width="fill_parent"
                android:layout_height="25px"
                android:layout_marginTop="20px"
                android:textColor="#2C2328" />
	            
            <TextView
                android:id="@+id/options_menu_title_two"
                android:layout_width="fill_parent"
                android:layout_height="25px"
                android:layout_below="@+id/options_menu_title_one"
                android:textColor="#2C2328" />
	                           
            <TextView
                android:id="@+id/options_menu_title_three"
                android:layout_width="fill_parent"
                android:layout_height="25px"
                android:layout_below="@+id/options_menu_title_two"
                android:textColor="#2C2328" />             	          
        
        </RelativeLayout>
        
        <Button
	        android:id="@+id/btn_clear"
	        android:layout_width="67px"    
	        android:layout_height="61px"
	        android:layout_marginLeft="24px"
	        android:layout_marginTop="232px"
	        android:background="@drawable/btn_clear"/>
        
        <Button
	        android:id="@+id/btn_down"
	        android:layout_width="50px"
	        android:layout_height="81px"
	        android:layout_marginLeft="157px"
	        android:layout_marginTop="232px"
	        android:background="@drawable/btn_down"/>
        
        <Button
	        android:id="@+id/btn_enter"
	        android:layout_width="132px"
	        android:layout_height="39px"
	        android:layout_marginLeft="74px"
	        android:layout_marginTop="213px"
	        android:background="@drawable/btn_enter"/>
        
        <Button
	        android:id="@+id/btn_up"
	        android:layout_width="50px"
	        android:layout_height="81px"
	        android:layout_marginLeft="207px"
	        android:layout_marginTop="232px"
	        android:background="@drawable/btn_up"/>
        
        
        <Button
	        android:id="@+id/btn_one"
	        android:layout_width="64px"
	        android:layout_height="43px"
	        android:layout_marginLeft="14px"
	        android:layout_marginTop="314px"
	        android:background="@drawable/btn_one"/>

        
        <Button
	        android:id="@+id/btn_two"
	        android:layout_width="68px"
	        android:layout_height="39px"
	        android:layout_marginLeft="107px"
	        android:layout_marginTop="329px"
	        android:background="@drawable/btn_two"/>
	        
        
        <Button
	        android:id="@+id/btn_three"
	        android:layout_width="67px"
	        android:layout_height="43px"
	        android:layout_marginLeft="203px"
	        android:layout_marginTop="314px"
	        android:background="@drawable/btn_three"/>
        
        <Button
	        android:id="@+id/btn_four"
	        android:layout_width="66px"
	        android:layout_height="43px"
	        android:layout_marginLeft="16px"
	        android:layout_marginTop="368px"
	        android:background="@drawable/btn_four"/>
        
        <Button
	        android:id="@+id/btn_five"
	        android:layout_width="71px"
	        android:layout_height="40px"
	        android:layout_marginLeft="105px"
	        android:layout_marginTop="382px"
	        android:background="@drawable/btn_five"/>
        
        <Button
	        android:id="@+id/btn_six"
	        android:layout_width="66px"
	        android:layout_height="44px"
	        android:layout_marginLeft="200px"
	        android:layout_marginTop="367px"
	        android:background="@drawable/btn_six"/>
        
        <Button
	        android:id="@+id/btn_seven"
	        android:layout_width="64px"
	        android:layout_height="44px"
	        android:layout_marginLeft="21px"
	        android:layout_marginTop="421px"
	        android:background="@drawable/btn_seven"/>
        
        <Button
	        android:id="@+id/btn_eight"
	        android:layout_width="69px"
	        android:layout_height="40px"
	        android:layout_marginLeft="106px"
	        android:layout_marginTop="436px"
	        android:background="@drawable/btn_eight"/>
        
        <Button
	        android:id="@+id/btn_nine"
	        android:layout_width="66px"
	        android:layout_height="45px"
	        android:layout_marginLeft="196px"
	        android:layout_marginTop="421px"
	        android:background="@drawable/btn_nine"/>
        
        <Button
	        android:id="@+id/btn_star"
	        android:layout_width="66px"
	        android:layout_height="43px"
	        android:layout_marginLeft="23px"
	        android:layout_marginTop="476px"
	        android:background="@drawable/btn_star"/>
        
        <Button
	        android:id="@+id/btn_zero"
	        android:layout_width="70px"
	        android:layout_height="41px"
	        android:layout_marginLeft="106px"
	        android:layout_marginTop="490px"
	        android:background="@drawable/btn_zero"/>
        
        <Button
	        android:id="@+id/btn_pound"
	        android:layout_width="65px"
	        android:layout_height="43px"
	        android:layout_marginLeft="193px"
	        android:layout_marginTop="476px"
	        android:background="@drawable/btn_pound"/>
        
    </RelativeLayout>
</FrameLayout>